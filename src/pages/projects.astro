        techStack: ['Firestore', 'React', 'React Router', 'Material UI', 'GIT'],
    },
    {
        title: 'Social Pets',
        description: 'A full-featured social media application for our four-legged friends.',
        highlights: ['full stack development', 'CRUD', 'authentication', 'data validation', 'design', 'engineering'],
        techStack: ['React', 'React Router', 'Redux', 'Material UI', 'Formik', 'Yup', 'Node.js', 'Express.js', 'Sequelize', 'PostgreSQL'],
    },
    {
        title: 'Portfolio',
        description: "A portfolio website I designed and built for a client (ps: I'm the client ðŸ˜‚)",
        highlights: ['UI/UX', 'design', 'wireframing', 'prototyping', 'mockup-based development', "static website don't have to suck", 'software deployment', 'choose the right tools for the job - not everything should be a Create React App'],
        techStack: ['Astro', 'JavaScript', 'Tailwind CSS', 'Figma', 'Render'],
    },
