---

<Layout headerMessage="/projects">
    <div class="flex flex-col gap-6 justify-center items-center text-base/snug p-5 my-10 md:my-20 max-w-screen-md mx-auto min-w-min md:gap-10">
        <div class="w-full">
            <h1 class="font-bayon text-4xl">/Projects</h1>
            <h2 class="font-montserrat text-base">Some of the work I'm most proud of.</h2>
        </div>

        <div class="w-full flex flex-row flex-wrap justify-center items-center gap-10">
            {
                projectsData.map(projectData => <ProjectCard projectData={projectData} />)
            }
        </div>
    </div>
</Layout>
